LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;

ENTITY DECO1 IS
	PORT(NUM: IN INTEGER RANGE 1 TO 3; -- IN STD_LOGIC_VECTOR(3 DOWNTO 0);
			  SAL: OUT STD_LOGIC_VECTOR(7 DOWNTO 0)); -- PARA LOS 8 SEG DEL DISPLAY
END ENTITY;

ARCHITECTURE BEAS OF DECO1 IS
BEGIN
	
	WITH NUM SELECT
		  SAL <= "10011111" WHEN 1, -- 1
					"00100101" WHEN 2, -- 2
					"00001101" WHEN 3, -- 3
					"11111111" WHEN OTHERS;

END BEAS;
